            </ul>
          </span>

        </div>
        <!-- RIGHT DIV -->
        <div class="w-full">
          <%= form_for @changeset, Routes.hireme_path(@conn, :create), fn f ->  %>
            <div class="w-full text-center 
                        flex flex-col justify-center items-center">
              <span class="w-full my-10 mx-2">
                <h2 class="font-semibold text-[50px]">
                  Contact Me
                </h2>           
                <ul class="w-full py-10 px-2">
                  <li>
                    <%= text_input f, :name, class: "w-[100%] bg-[#242526] mx-auto text-[#e3e3e3] shadow-sm
                                                    focus:text-gray-700 focus:bg-[#e6e6e6] focus:border-black",
                        placeholder: "name" %>
                  </li>
                  <li class="my-6">
                    <%= text_input f, :email, class: "w-[100%] bg-[#242526] mx-auto text-[#e3e3e3] shadow-sm
                                                    focus:text-gray-700 focus:bg-[#e6e6e6] focus:border-black",
                        placeholder: "email" %>
                  </li>
                  <li class="h-[100%]">
                    <%= textarea f, :message, class: "w-[100%] bg-[#242526] mx-auto text-[#e3e3e3] shadow-sm
                                                    focus:text-gray-700 focus:bg-[#e6e6e6] focus:border-black",
                        placeholder: "your message..." %> 
                  </li>
                </ul>
                <div class="w-full px-2">
                  <button class="w-full bg-[#505151] p-2 mx-auto
                                rounded-lg hover:bg-[#2374e1] ">
                    Send
                  </button>
                </div>
              </span>
            </div>
          <% end %>
        </div>
    </article>
    

</section>