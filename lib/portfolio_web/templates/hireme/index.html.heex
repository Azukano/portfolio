<!-- HIRE ME! SECTION -->
<section class="relative flex items-center w-full min-h-calc-vh2 lg:min-h-calc-vh1
                bg-gradient-to-tr from-[#5E5E5E] via-[#242323] to-[#242526]">
    <img src="/images/yellow-page.jpg"
         alt="Background Yellow Pages"
       class="w-full h-full object-cover absolute mix-blend-overlay">
    <article class="w-[90%] min-h-full mx-auto text-[#E6E6E6] my-10
                    border-[#242526] z-10 bg-[#242526]/60 border-8 
                    rounded-3xl flex flex-col sm:w-[95%] md:w-[90%] xl:w-[70%] md:flex-row">                                       
        <!-- LEFT DIV -->
        <div class="w-full text-center 
                    flex flex-col justify-center items-center">
          <span class="w-full py-10 px-2">
            <h2 class="font-semibold text-[50px]">
              Follow me and say Hi!
            </h2>
            <h3 class="font-medium text-[25px]">
              social media links:
            </h3>
            <ul class="w-full flex justify-center items-center mt-5 space-x-10">
