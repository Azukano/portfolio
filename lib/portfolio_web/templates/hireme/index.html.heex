                  <rect x="1.45605" y="1.7506" width="66" height="58.4988" rx="3" fill="#0072B1"/>
                  <path d="M17.8864 57.2494H5.44713V22.1986H17.8864V57.2494ZM11.6601 17.4174C7.68239 17.4174 4.45605 14.5346 4.45605 11.0541C4.45605 9.38231 5.21505 7.77899 6.56606 6.59685C7.91708 5.41471 9.74945 4.7506 11.6601 4.7506C13.5707 4.7506 15.4031 5.41471 16.7541 6.59685C18.1051 7.77899 18.8641 9.38231 18.8641 11.0541C18.8641 14.5346 15.6364 17.4174 11.6601 17.4174ZM64.4427 57.2494H52.0302V40.1869C52.0302 36.1205 51.9364 30.9057 45.5627 30.9057C39.0953 30.9057 38.1043 35.3236 38.1043 39.8939V57.2494H25.6784V39.724V22.1986H37.6087V26.9799H37.7828C39.4436 24.226 43.5003 21.3197 49.5525 21.3197C62.1418 21.3197 64.4561 28.5736 64.4561 37.9955V57.2494H64.4427Z" fill="white"/>
